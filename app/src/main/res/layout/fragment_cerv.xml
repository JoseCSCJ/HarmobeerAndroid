<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="br.com.opet.tds.harmobeerAndroid.activity.MainActivity"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <EditText
        android:id="@+id/nomecerv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_alignParentStart="true"
        android:hint="Nome da cerveja" />

    <EditText
        android:id="@+id/estilo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="150dp"
        android:hint="Estilo da cerveja" />

    <EditText
        android:id="@+id/teor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="210dp"
        android:inputType="numberDecimal"
        android:hint="Teor AlcÃ³olico" />

    <Button
        android:id="@+id/cadastrarCerv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="270dp"
